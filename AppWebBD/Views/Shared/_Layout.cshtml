<!DOCTYPE html>
<html lang="en">
<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>@ViewData["Title"] - Banco CostaRica</title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
		<header>
				<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
          <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
              <img alt = "Logo"	src = "@Url.Content("~/Logo.png")" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <a class="nav-link text-dark" asp-area="" asp-controller="Principal" asp-action="Login">Iniciar Sesión</a>
          </div>
				</nav>
				</header>
				<div class="container">
						<main role="main" class="pb-3">
								@RenderBody()
						</main>
				</div>
				<script src="~/lib/jquery/dist/jquery.min.js"></script>
				<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
				<script src="~/js/site.js" asp-append-version="true"></script>
				@RenderSection("Scripts", required: false)
		</body>
<!-- Footer -->
    <footer class="footer" >
      <div class="footer-copyright text-center py-3">
        <p>&copy; Jacob Guzmán / Darío Vargas.</p>
     </div>
    </footer>
<!-- Footer -->
</html>
