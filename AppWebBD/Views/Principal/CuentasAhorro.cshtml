            <th>
                @Html.DisplayNameFor(model => model.Clienteid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCuentaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCuenta)
            </th>
